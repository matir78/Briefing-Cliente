            if (currentEl) currentEl.classList.remove('hidden');

            // Scroll top
            window.scrollTo({ top: 0, behavior: 'smooth' });

            // Buttons visibility
            if (currentStep === 1) prevBtn.disabled = true;
            else prevBtn.disabled = false;

            if (currentStep === totalSteps) {
                nextBtn.classList.add('hidden');
                downloadBtn.classList.remove('hidden');
                downloadBtn.classList.add('flex');
            } else {
                nextBtn.classList.remove('hidden');
                downloadBtn.classList.add('hidden');
                downloadBtn.classList.remove('flex');
            }

            // Progress Bar
            const percentage = (currentStep / totalSteps) * 100;
            progressBar.style.width = `${percentage}%`;
        }

        nextBtn.addEventListener('click', () => {
            if (currentStep < totalSteps) {
                // Validation could go here
                // if (!validateStep(currentStep)) return; 
                currentStep++;
                updateUI();
            }
        });

        prevBtn.addEventListener('click', () => {
            if (currentStep > 1) {
                currentStep--;
                updateUI();
            }
        });

        // Initialize
        updateUI();

        // --- SUBMISSION LOGIC ---
        function getFormData() {
            if (!form) return null;
            return new FormData(form as HTMLFormElement);
        }

        function showModal(title, message, type) {
            const modal = document.getElementById('successModal');
            if (!modal) return;
            const titleEl = document.getElementById('modalTitle');
            const msgEl = document.getElementById('modalMessage');
            const iconEl = document.getElementById('modalIcon');
            
            if (titleEl) titleEl.innerText = title;
            if (msgEl) msgEl.innerText = message;
            
            if (iconEl) {
                 if (type === 'error') {
                    iconEl.classList.remove('bg-green-500');
                    iconEl.classList.add('bg-red-500');
                 } else {
                    iconEl.classList.remove('bg-red-500');
                    iconEl.classList.add('bg-green-500');
                 }
            }
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        const closeModalBtn = document.getElementById('closeModalBtn');
        const modal = document.getElementById('successModal');

        if (closeModalBtn && modal) {
            closeModalBtn.addEventListener('click', () => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            });
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                }
            });
        }

        // --- DOWNLOAD HANDLER ---
        if (downloadBtn) {
            downloadBtn.addEventListener('click', async () => {
                const formData = getFormData();
                if (!formData) return;
                
                const originalText = downloadBtn.innerHTML;
                downloadBtn.innerHTML = 'Procesando...';
                downloadBtn.disabled = true;

                try {
                    const response = await fetch('/api/download-pdf', {
                        method: 'POST',
                        body: formData
                    });
                    
                    if (response.ok) {
                        const blob = await response.blob();
                        const url = window.URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = 'Briefing_Proyecto.pdf'; 
                        document.body.appendChild(a);
                        a.click();
                        window.URL.revokeObjectURL(url);
                        a.remove();

                        const phone = "59897999135";
                        const message = encodeURIComponent("Â¡Hola! AquÃ­ adjunto el briefing en PDF que acabo de descargar.");
                        const waUrl = `https://wa.me/${phone}?text=${message}`;
                        
                        window.open(waUrl, '_blank');

                        showModal('Â¡Listo!', 'El PDF se ha descargado y se ha abierto WhatsApp.', 'success');
                    } else {
                        throw new Error('Error en el servidor');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showModal('Error', 'Hubo un problema generando el PDF.', 'error');
                } finally {
                    downloadBtn.innerHTML = originalText;
                    downloadBtn.disabled = false;
                }
            });
        }
    </script>
