        <script>
            // --- WIZARD LOGIC ---
            let currentStep = 1;
            const totalSteps = 5;

            const prevBtn = document.getElementById(
                "prevBtn",
            ) as HTMLButtonElement | null;
            const nextBtn = document.getElementById(
                "nextBtn",
            ) as HTMLButtonElement | null;
            const downloadBtn = document.getElementById(
                "downloadPdfBtn",
            ) as HTMLButtonElement | null;
            const progressBar = document.getElementById("progressBar");
            const form = document.getElementById("briefForm");

            function updateUI() {
                // Hide all steps
                document.querySelectorAll(".step-content").forEach((el) => {
                    el.classList.add("hidden");
                });
                // Show current step
                const currentEl = document.querySelector(
                    `.step-content[data-step="${currentStep}"]`,
                );
                if (currentEl) currentEl.classList.remove("hidden");

                // Scroll top
                window.scrollTo({ top: 0, behavior: "smooth" });

                // Buttons visibility
                if (prevBtn) {
                    prevBtn.disabled = currentStep === 1;
                }

                if (nextBtn) {
                    if (currentStep === totalSteps) {
                        nextBtn.classList.add("hidden");
                    } else {
                        nextBtn.classList.remove("hidden");
                    }
                }

                if (downloadBtn) {
                    if (currentStep === totalSteps) {
                        downloadBtn.classList.remove("hidden");
                        downloadBtn.classList.add("flex");
                    } else {
                        downloadBtn.classList.add("hidden");
                        downloadBtn.classList.remove("flex");
                    }
                }

                // Progress Bar
                if (progressBar) {
                    const percentage = (currentStep / totalSteps) * 100;
                    progressBar.style.width = `${percentage}%`;
                }
            }

            if (nextBtn) {
                nextBtn.addEventListener("click", () => {
                    if (currentStep < totalSteps) {
                        // Validation could go here
                        // if (!validateStep(currentStep)) return;
                        currentStep++;
                        updateUI();
                    }
                });
            }

            if (prevBtn) {
                prevBtn.addEventListener("click", () => {
                    if (currentStep > 1) {
                        currentStep--;
                        updateUI();
                    }
                });
            }

            // Initialize
            updateUI();

            // --- HOSTING TOGGLE LOGIC ---
            const hostingCheckbox = document.getElementById("hostingCheckbox");
            const hostingDetails = document.getElementById("hostingDetails");

            if (hostingCheckbox && hostingDetails) {
                hostingCheckbox.addEventListener("change", (e) => {
                    if ((e.target as HTMLInputElement).checked) {
                        hostingDetails.classList.remove("hidden");
                    } else {
                        hostingDetails.classList.add("hidden");
                    }
                });
            }

            // --- SUBMISSION LOGIC ---
            function getFormData() {
                if (!form) return null;
                return new FormData(form as HTMLFormElement);
            }

            function showModal(
                title: string,
                message: string,
                type: "success" | "error",
            ) {
                const modal = document.getElementById("successModal");
                if (!modal) return;
                const titleEl = document.getElementById("modalTitle");
                const msgEl = document.getElementById("modalMessage");
                const iconEl = document.getElementById("modalIcon");

                if (titleEl) titleEl.innerText = title;
                if (msgEl) msgEl.innerText = message;

                if (iconEl) {
                    if (type === "error") {
                        iconEl.classList.remove("bg-green-500");
                        iconEl.classList.add("bg-red-500");
                    } else {
                        iconEl.classList.remove("bg-red-500");
                        iconEl.classList.add("bg-green-500");
                    }
                }
                modal.classList.remove("hidden");
                modal.classList.add("flex");
            }

            const closeModalBtn = document.getElementById("closeModalBtn");
            const modal = document.getElementById("successModal");

            if (closeModalBtn && modal) {
                closeModalBtn.addEventListener("click", () => {
                    modal.classList.add("hidden");
                    modal.classList.remove("flex");
                });
                modal.addEventListener("click", (e) => {
                    if (e.target === modal) {
                        modal.classList.add("hidden");
                        modal.classList.remove("flex");
                    }
                });
            }

            // --- DOWNLOAD HANDLER ---
            if (downloadBtn) {
                downloadBtn.addEventListener("click", async () => {
                    const formData = getFormData();
                    if (!formData) return;

                    const originalText = downloadBtn.innerHTML;
                    downloadBtn.innerHTML = "Procesando...";
                    downloadBtn.disabled = true;

                    try {
                        const response = await fetch("/api/download-pdf", {
                            method: "POST",
                            body: formData,
                        });

                        if (response.ok) {
                            const blob = await response.blob();
                            const url = window.URL.createObjectURL(blob);
                            const a = document.createElement("a");
                            a.href = url;
                            a.download = "Briefing_Proyecto.pdf";
                            document.body.appendChild(a);
                            a.click();
                            window.URL.revokeObjectURL(url);
                            a.remove();

                            const phone = "59897999135";
                            const message = encodeURIComponent(
                                "¡Hola! Aquí adjunto el briefing en PDF que acabo de descargar.",
                            );
                            const waUrl = `https://wa.me/${phone}?text=${message}`;

                            window.open(waUrl, "_blank");

                            showModal(
                                "¡Listo!",
                                "El PDF se ha descargado y se ha abierto WhatsApp.",
                                "success",
                            );
                        } else {
                            throw new Error("Error en el servidor");
                        }
                    } catch (error) {
                        console.error("Error:", error);
                        showModal(
                            "Error",
                            "Hubo un problema generando el PDF.",
                            "error",
                        );
                    } finally {
                        downloadBtn.innerHTML = originalText;
                        downloadBtn.disabled = false;
                    }
                });
            }

            // --- TOOLTIP LOGIC (Mobile Click Support) ---
            document.addEventListener("DOMContentLoaded", () => {
                const tooltips =
                    document.querySelectorAll(".tooltip-container");

                tooltips.forEach((container) => {
                    const trigger = container.querySelector(".tooltip-trigger");

                    if (trigger) {
                        trigger.addEventListener("click", (e) => {
                            e.preventDefault();
                            e.stopPropagation();

                            // Close others
                            tooltips.forEach((t) => {
                                if (t !== container)
                                    t.classList.remove("active");
                            });

                            // Toggle current
                            container.classList.toggle("active");
                        });
                    }
                });

                // Close when clicking outside
                document.addEventListener("click", () => {
                    tooltips.forEach((t) => t.classList.remove("active"));
                });
            });
