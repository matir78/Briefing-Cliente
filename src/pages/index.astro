---
import {
    Briefcase,
    Snowflake,
    Cuboid,
    Sparkles,
    PaintRoller,
    Hammer,
    Zap,
    PencilRuler,
    CheckCircle2,
    FileOutput,
    ArrowRight,
    ArrowLeft,
    CircleDollarSign,
    Handshake,
    Building2,
    MessageCircle,
    Target,
    Lightbulb,
    Users,
    Globe,
    Share2,
    Info,
} from "lucide-react";

import "../styles/global.css";
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Briefing de Proyecto Web | Servicio Integral</title>
        <meta
            name="description"
            content="Formulario inteligente para toma de requerimientos de proyectos web y servicios."
        />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="font-sans min-h-screen pb-32">
        <!-- HEADER -->
        <header
            class="bg-white/90 backdrop-blur-md border-b border-slate-200 sticky top-0 z-40"
        >
            <div
                class="max-w-lg mx-auto px-6 py-4 flex items-center justify-between"
            >
                <div class="flex items-center gap-3">
                    <div class="bg-blue-600 p-2 rounded-lg">
                        <Briefcase className="text-white w-6 h-6" />
                    </div>
                    <div>
                        <h1
                            class="text-xl font-bold tracking-tight text-slate-900"
                        >
                            Briefing Creativo
                        </h1>
                        <p class="text-xs text-slate-500">
                            Sistema de Toma de Requerimientos
                        </p>
                    </div>
                </div>
                <div class="text-right hidden sm:block">
                    <p class="text-xs text-slate-500 font-medium">
                        VERSIÓN 2.1
                    </p>
                    <div class="flex items-center gap-2">
                        <span
                            class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
                        ></span>
                        <span class="text-xs text-green-600 font-bold"
                            >WIZARD ACTIVO</span
                        >
                    </div>
                </div>
            </div>
            <!-- PROGRESS BAR -->
            <div class="h-1 bg-slate-200 w-full">
                <div
                    id="progressBar"
                    class="h-full bg-blue-500 transition-all duration-500 ease-out"
                    style="width: 20%"
                >
                </div>
            </div>
        </header>

        <main class="max-w-lg mx-auto px-6 py-8">
            <form id="briefForm" class="space-y-6">
                <!-- STEP 1: IDENTIDAD -->
                <div class="step-content" data-step="1">
                    <section
                        class="bg-brand-card rounded-2xl p-8 shadow-xl border border-slate-200 animate-fade-in-up"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="bg-blue-600 text-white w-10 h-10 rounded-full flex items-center justify-center font-bold mr-4"
                            >
                                1
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-slate-900">
                                    Identidad del Negocio
                                </h2>
                                <p class="text-slate-500 text-sm">
                                    Datos básicos para contactar y factura.
                                </p>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 gap-6 mb-6">
                            <div>
                                <label
                                    class="block text-sm font-medium text-slate-700 mb-2"
                                    >Nombre de la Empresa / Marca</label
                                >
                                <input
                                    type="text"
                                    name="Empresa"
                                    required
                                    placeholder="Ej: Home Services LLC"
                                    class="input-field w-full p-3 rounded-lg focus:ring-2 focus:ring-blue-500"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-medium text-slate-700 mb-2 flex items-center"
                                    >Eslogan o Frase Corta
                                    <div class="tooltip-container">
                                        <Info
                                            className="w-4 h-4 text-slate-400 hover:text-blue-500 tooltip-trigger"
                                        />
                                        <div class="tooltip-content">
                                            Una frase breve que defina tu
                                            negocio. Ej: "Calidad que perdura"
                                        </div>
                                    </div>
                                </label>
                                <input
                                    type="text"
                                    name="Eslogan"
                                    placeholder="Ej: Calidad que perdura"
                                    class="input-field w-full p-3 rounded-lg placeholder-slate-400"
                                />
                            </div>
                        </div>

                        <div class="grid grid-cols-1 gap-6 mb-6">
                            <div>
                                <label
                                    class="block text-sm font-medium text-slate-700 mb-2"
                                    >Teléfono de Contacto</label
                                >
                                <input
                                    type="tel"
                                    name="Telefono"
                                    placeholder="+1 (555) 000-0000"
                                    class="input-field w-full p-3 rounded-lg placeholder-slate-400"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-medium text-slate-700 mb-2"
                                    >Email Principal</label
                                >
                                <input
                                    type="email"
                                    name="Email"
                                    placeholder="contacto@empresa.com"
                                    class="input-field w-full p-3 rounded-lg placeholder-slate-400"
                                />
                            </div>
                        </div>

                        <div>
                            <label
                                class="block text-sm font-medium text-slate-300 mb-2"
                                >Notas Adicionales (Identidad)</label
                            >
                            <textarea
                                name="Notas_Identidad"
                                rows="2"
                                placeholder="Algo más que debamos saber..."
                                class="input-field w-full p-3 rounded-lg"
                            ></textarea>
                        </div>
                    </section>
                </div>

                <!-- STEP 2: ESTRATEGIA (NUEVO) -->
                <div class="step-content hidden" data-step="2">
                    <section
                        class="bg-brand-card rounded-2xl p-8 shadow-xl border border-slate-200 animate-fade-in-up"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="bg-blue-600 text-white w-10 h-10 rounded-full flex items-center justify-center font-bold mr-4"
                            >
                                2
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-slate-900">
                                    Estrategia Digital
                                </h2>
                                <p class="text-slate-500 text-sm">
                                    ¿Qué queremos lograr con esta web?
                                </p>
                            </div>
                        </div>

                        <div class="mb-8">
                            <label
                                class="block text-sm font-medium text-slate-700 mb-3 flex items-center"
                                >Objetivo Principal de la Web
                                <div class="tooltip-container">
                                    <Info
                                        className="w-4 h-4 text-slate-400 hover:text-blue-500 tooltip-trigger"
                                    />
                                    <div class="tooltip-content">
                                        Define la acción prioritaria: ¿Ventas
                                        directas o imagen?
                                    </div>
                                </div>
                            </label>
                            <div class="grid grid-cols-1 gap-4">
                                <label class="cursor-pointer relative">
                                    <input
                                        type="radio"
                                        name="Objetivo_Web"
                                        value="Captar Leads (Formulario)"
                                        class="hidden-checkbox"
                                        checked
                                    />
                                    <div
                                        class="card-premium bg-white p-6 rounded-xl border border-slate-200 flex flex-col items-center text-center gap-3 h-full justify-center group"
                                    >
                                        <div
                                            class="p-3 bg-red-100 rounded-full group-hover:bg-red-600 transition-colors"
                                        >
                                            <Target
                                                className="text-red-500 group-hover:text-white w-8 h-8 transition-colors"
                                            />
                                        </div>
                                        <div>
                                            <h4
                                                class="font-bold text-slate-900 mb-1"
                                            >
                                                Captar Clientes
                                            </h4>
                                            <p class="text-xs text-slate-500">
                                                Generar leads y ventas
                                            </p>
                                        </div>
                                        <div
                                            class="check-icon absolute top-2 right-2 text-red-500 opacity-0 transition-all transform scale-0"
                                        >
                                            <CheckCircle2 className="w-5 h-5" />
                                        </div>
                                    </div>
                                </label>
                                <label class="cursor-pointer relative">
                                    <input
                                        type="radio"
                                        name="Objetivo_Web"
                                        value="Branding / Informativa"
                                        class="hidden-checkbox"
                                    />
                                    <div
                                        class="card-premium bg-white p-6 rounded-xl border border-slate-200 flex flex-col items-center text-center gap-3 h-full justify-center group"
                                    >
                                        <div
                                            class="p-3 bg-yellow-100 rounded-full group-hover:bg-yellow-600 transition-colors"
                                        >
                                            <Lightbulb
                                                className="text-yellow-500 group-hover:text-white w-8 h-8 transition-colors"
                                            />
                                        </div>
                                        <div>
                                            <h4
                                                class="font-bold text-slate-900 mb-1"
                                            >
                                                Presencia de Marca
                                            </h4>
                                            <p class="text-xs text-slate-500">
                                                Informativa e institucional
                                            </p>
                                        </div>
                                        <div
                                            class="check-icon absolute top-2 right-2 text-yellow-500 opacity-0 transition-all transform scale-0"
                                        >
                                            <CheckCircle2 className="w-5 h-5" />
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="mb-6">
                            <label
                                class="block text-sm font-medium text-slate-700 mb-2 flex items-center"
                                >Público Objetivo (Target)
                                <div class="tooltip-container">
                                    <Info
                                        className="w-4 h-4 text-slate-400 hover:text-blue-500 tooltip-trigger"
                                    />
                                    <div class="tooltip-content">
                                        ¿A quién le vendemos? Edad, ubicación e
                                        intereses.
                                    </div>
                                </div>
                            </label>
                            <div class="relative">
                                <Users
                                    className="absolute top-3 left-3 text-slate-400 w-5 h-5"
                                />
                                <input
                                    type="text"
                                    name="Publico_Objetivo"
                                    placeholder="Ej: Dueños de casa en zonas residenciales, Empresas..."
                                    class="input-field w-full p-3 pl-10 rounded-lg placeholder-slate-400"
                                />
                            </div>
                            <p class="text-xs text-slate-500 mt-1">
                                ¿A quién le vendemos?
                            </p>
                        </div>

                        <div class="mb-6">
                            <label
                                class="block text-sm font-medium text-slate-700 mb-2 flex items-center"
                                >Principales Competidores
                                <div class="tooltip-container">
                                    <Info
                                        className="w-4 h-4 text-slate-400 hover:text-blue-500 tooltip-trigger"
                                    />
                                    <div class="tooltip-content">
                                        Nombres o webs de la competencia para
                                        analizar.
                                    </div>
                                </div>
                            </label>
                            <textarea
                                name="Competencia"
                                rows="2"
                                placeholder="Nombres o links de empresas que ofrezcan lo mismo..."
                                class="input-field w-full p-3 rounded-lg placeholder-slate-400"
                            ></textarea>
                        </div>

                        <div>
                            <label
                                class="block text-sm font-medium text-slate-700 mb-2"
                                >Notas Adicionales (Estrategia)</label
                            >
                            <textarea
                                name="Notas_Estrategia"
                                rows="2"
                                placeholder="Detalles extra sobre objetivos..."
                                class="input-field w-full p-3 rounded-lg placeholder-slate-400"
                            ></textarea>
                        </div>
                    </section>
                </div>

                <!-- STEP 3: SERVICIOS -->
                <div class="step-content hidden" data-step="3">
                    <section
                        class="bg-brand-card rounded-2xl p-8 shadow-xl border border-slate-200 animate-fade-in-up"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="bg-blue-600 text-white w-10 h-10 rounded-full flex items-center justify-center font-bold mr-4"
                            >
                                3
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-slate-900">
                                    Servicios a Ofrecer
                                </h2>
                                <p class="text-slate-500 text-sm">
                                    Selecciona las áreas de negocio.
                                </p>
                            </div>
                        </div>

                        <p
                            class="text-slate-400 mb-4 text-sm uppercase tracking-wide font-bold"
                        >
                            Servicios Outdoor (Exterior)
                        </p>
                        <div class="grid grid-cols-2 gap-4 mb-8">
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Outdoor"
                                    value="Landscaping"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <Globe
                                        className="text-green-500 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Landscaping</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Outdoor"
                                    value="Nieve / Snow Removal"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <Snowflake
                                        className="text-blue-400 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Nieve / Snow</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Outdoor"
                                    value="Hardscaping"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <Cuboid
                                        className="text-orange-500 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Hardscaping</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Outdoor"
                                    value="Limpieza Estacional"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <Sparkles
                                        className="text-yellow-500 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Limpieza Terreno</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                        </div>

                        <p
                            class="text-slate-400 mb-4 text-sm uppercase tracking-wide font-bold"
                        >
                            Servicios Indoor (Interior)
                        </p>
                        <div class="grid grid-cols-2 gap-4 mb-8">
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Indoor"
                                    value="Pintura"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <PaintRoller
                                        className="text-pink-500 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Pintura</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Indoor"
                                    value="Reparaciones Generales"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <Hammer
                                        className="text-gray-500 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Reparaciones</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Indoor"
                                    value="Plomeria/Electricidad Basica"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <Zap
                                        className="text-yellow-500 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Plomería/Elec.</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                            <label class="cursor-pointer relative">
                                <input
                                    type="checkbox"
                                    name="Servicios_Indoor"
                                    value="Remodelaciones Pequeñas"
                                    class="hidden-checkbox"
                                />
                                <div
                                    class="selection-card bg-white border border-slate-200 p-4 rounded-xl h-full flex flex-col items-center justify-center text-center hover:bg-slate-50"
                                >
                                    <PencilRuler
                                        className="text-purple-500 w-8 h-8 mb-3"
                                    />
                                    <span class="text-slate-700 font-medium"
                                        >Remodelaciones</span
                                    >
                                    <div
                                        class="check-icon absolute top-2 right-2 text-blue-500 opacity-0 transition-all transform scale-0"
                                    >
                                        <CheckCircle2 className="w-5 h-5" />
                                    </div>
                                </div>
                            </label>
                        </div>

                        <div class="mt-8">
                            <label
                                class="block text-sm font-medium text-slate-700 mb-2"
                                >Otros Servicios / Notas de Servicios</label
                            >
                            <textarea
                                name="Notas_Servicios"
                                rows="3"
                                placeholder="Describe algún servicio especial o detalle técnico..."
                                class="input-field w-full p-3 rounded-lg placeholder-slate-400"
                            ></textarea>
                        </div>
                    </section>
                </div>

                <!-- STEP 4: CLIENTE Y DISEÑO -->
                <div class="step-content hidden" data-step="4">
                    <section
                        class="bg-brand-card rounded-2xl p-8 shadow-2xl mb-8 border border-slate-700 animate-fade-in-up"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="bg-blue-600 text-white w-10 h-10 rounded-full flex items-center justify-center font-bold mr-4"
                            >
                                4
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-white">
                                    Diseño y Preferencias
                                </h2>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 gap-8 mb-8">
                            <div>
                                <p
                                    class="text-slate-400 mb-4 text-sm uppercase tracking-wide font-bold flex items-center"
                                >
                                    Estilo Visual
                                    <div class="tooltip-container">
                                        <Info
                                            className="w-4 h-4 text-slate-400 hover:text-blue-500 tooltip-trigger"
                                        />
                                        <div class="tooltip-content">
                                            La "personalidad" que debe
                                            transmitir tu marca.
                                        </div>
                                    </div>
                                </p>
                                <div class="grid grid-cols-1 gap-4">
                                    <!-- Corporativo -->
                                    <label class="cursor-pointer relative">
                                        <input
                                            type="radio"
                                            name="Estilo_Visual"
                                            value="Corporativo y Limpio"
                                            class="hidden-checkbox"
                                            checked
                                        />
                                        <div
                                            class="card-premium bg-white p-6 rounded-xl border border-slate-200 h-full flex flex-col justify-between group"
                                        >
                                            <div class="mb-4">
                                                <div
                                                    class="w-12 h-12 bg-blue-900/50 rounded-lg flex items-center justify-center mb-3 group-hover:bg-blue-600 transition-colors"
                                                >
                                                    <Building2
                                                        className="text-blue-400 group-hover:text-white w-6 h-6 transition-colors"
                                                    />
                                                </div>
                                                <h4
                                                    class="text-lg font-bold text-slate-900 mb-1"
                                                >
                                                    Corporativo
                                                </h4>
                                                <p
                                                    class="text-sm text-slate-500 mb-3"
                                                >
                                                    Confiable, profesional,
                                                    seguro.
                                                </p>

                                                <!-- HSL Palette Example -->
                                                <div
                                                    class="flex gap-1 h-3 rounded-full overflow-hidden"
                                                >
                                                    <div
                                                        class="flex-1 bg-[hsl(222,47%,11%)]"
                                                        title="Dark Blue"
                                                    >
                                                    </div>
                                                    <div
                                                        class="flex-1 bg-[hsl(217,91%,60%)]"
                                                        title="Action Blue"
                                                    >
                                                    </div>
                                                    <div
                                                        class="flex-1 bg-[hsl(210,40%,96%)]"
                                                        title="Light Gray"
                                                    >
                                                    </div>
                                                </div>
                                            </div>
                                            <div
                                                class="check-icon absolute top-3 right-3 text-blue-400 opacity-0 transition-all transform scale-0"
                                            >
                                                <CheckCircle2
                                                    className="w-6 h-6"
                                                />
                                            </div>
                                        </div>
                                    </label>

                                    <!-- Robusto -->
                                    <label class="cursor-pointer relative">
                                        <input
                                            type="radio"
                                            name="Estilo_Visual"
                                            value="Robusto y Fuerte"
                                            class="hidden-checkbox"
                                        />
                                        <div
                                            class="card-premium bg-white p-6 rounded-xl border border-slate-200 h-full flex flex-col justify-between group"
                                        >
                                            <div class="mb-4">
                                                <div
                                                    class="w-12 h-12 bg-orange-900/50 rounded-lg flex items-center justify-center mb-3 group-hover:bg-orange-600 transition-colors"
                                                >
                                                    <Target
